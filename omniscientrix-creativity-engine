<script>
/* ----------------------------------------------------------
   BLOOM VISUAL (Random Sparks)
---------------------------------------------------------- */
function bloom(){
    const area=document.getElementById("bloom");
    area.innerHTML="";
    for(let i=0;i<22;i++){
        let s=document.createElement("div");
        s.className="spark";
        s.style.left=Math.random()*100+"%";
        s.style.top=(20+Math.random()*60)+"%";
        s.style.animationDelay=(Math.random()*2)+"s";
        area.appendChild(s);
    }
}
bloom();



/* ----------------------------------------------------------
   MASTER GENERATION SYSTEM (Ω∞ Creative Core)
---------------------------------------------------------- */
function begin(){
    document.getElementById("loader").style.display="block";
    document.getElementById("output").style.display="none";

    setTimeout(generate,1200);
}



function generate(){
    document.getElementById("loader").style.display="none";

    const c=document.getElementById("concept").value.trim();
    const m=document.getElementById("mode").value;

    const ideas=Ωcreative(c,m);

    document.getElementById("output").innerHTML = `
        <div class="card">
            <h3>Generated Results</h3>
            ${ideas.map(i=>"<p>• "+i+"</p>").join("")}
        </div>
    `;

    document.getElementById("output").style.display="block";
    bloom();
}



/* ----------------------------------------------------------
   Ω∞ CREATIVE ENGINE
---------------------------------------------------------- */
function Ωcreative(base,mode){
    if(!base) base="concept";

    switch(mode){

        case "names": return gen(base,[
            "Neon "+base,
            base+" Prime",
            base+" Nova",
            "Blue "+base+" Labs",
            base+" ΩCore",
            base+" Horizon",
            base+" Axis",
            base+" Rift"
        ]);

        case "slogans": return gen(base,[
            "Where "+base+" becomes infinite.",
            base+"—powered by imagination.",
            "Unlock the future of "+base+".",
            "Born from light. Built for tomorrow."
        ]);

        case "products": return genDynamic(base,12,"Product");

        case "business": return genDynamic(base,12,"Business Model");

        case "apps": return genDynamic(base,12,"App");

        case "inventions": return genDynamic(base,12,"Invention");

        case "stories": return genDynamic(base,12,"Story Concept");

        case "hooks": return genDynamic(base,12,"Viral Hook");

        case "ads": return genDynamic(base,10,"Ad Concept");

        case "powers": return genDynamic(base,15,"Superpower");

        case "artifacts": return genDynamic(base,15,"Ancient Artifact");

        case "timelines": return genDynamic(base,12,"Alternate Timeline");

        case "worlds": return genDynamic(base,12,"World Concept");

        case "lore": return genDynamic(base,15,"Lore Expansion");

        case "skills": return genDynamic(base,12,"Skill Tree Node");

        case "creatures": return genDynamic(base,15,"Creature");

        case "universes": return genDynamic(base,12,"Universe Blueprint");

        case "memes": return genDynamic(base,12,"Meme Idea");

        case "weapons": return genDynamic(base,12,"Sci-Fi Tool");

        case "magic": return genDynamic(base,12,"Magic System");

        case "scifi": return genDynamic(base,12,"Sci-Fi Concept");

        case "fantasy": return genDynamic(base,12,"Fantasy Element");

        case "prompts": return genDynamic(base,15,"Creative Prompt");

        case "transforms": return genDynamic(base,20,"Transformed Idea");

        case "expander": return genDynamic(base,100,"Idea");

        case "refiner": return genDynamic(base,20,"Refined Variant");

        case "pitch": return gen(base,[
            base+" will redefine the next decade.",
            "Imagine a world where "+base+" becomes reality.",
            base+" unlocks a new category entirely.",
            "A premium, scalable, future-proof take on "+base+"."
        ]);

        case "startup": return genDynamic(base,12,"Startup Pitch");

        case "content": return genDynamic(base,30,"Content Topic");

        default: return ["No mode selected."];
    }
}



/* GENERATION UTILITIES ------------------------------------------------------ */
function gen(base,list){
    return list.map(x=>x.replace(/base/gi,base));
}

function genDynamic(base,count,label){
    let arr=[];
    for(let i=0;i<count;i++){
        arr.push(`${label}: ${mut(base)} ${variant()}`);
    }
    return arr;
}

function mut(b){
    const mods=["Quantum","Neon","Nova","Prime","Hyper","Omega","Blue","Echo","Eternal","Apex"];
    return mods[Math.floor(Math.random()*mods.length)]+" "+b;
}

function variant(){
    const v=["Engine","System","Protocol","Flow","Cycle","Node","Realm","Frame","Core","Architect","Shift"];
    return v[Math.floor(Math.random()*v.length)];
}
